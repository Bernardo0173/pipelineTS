  "include": [
    "src/**/*.ts"  // Especifica los archivos a incluir en la compilaci贸n
  ],
  "exclude": [
    "node_modules",  // Excluye este directorio de la compilaci贸n
    "**/*.test.ts"   // Puede excluir otros patrones si es necesario
  ]
}
